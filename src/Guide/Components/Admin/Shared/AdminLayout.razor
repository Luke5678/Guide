@inherits LayoutComponentBase
@implements IDisposable

@inject NavigationManager NavigationManager

<HeadContent>
    <link rel="stylesheet" href="css/admin.css"/>
</HeadContent>

<SectionContent SectionName="js">
    <script src="js/tinyMceConf.js"></script>
    <script src="_content/TinyMCE.Blazor/tinymce-blazor.js"></script>
</SectionContent>

<header class="navbar navbar-expand-lg bg-dark mb-4" data-bs-theme="dark">
    <div class="container">
        <a class="navbar-brand" href="/admin">
            Panel administratora
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse d-lg-flex justify-content-lg-between" id="navbar">
            <nav class="navbar-nav">
                <div class="nav-item">
                    <NavLink class="nav-link" href="/admin/attractions">Atrakcje</NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="/admin/categories">Kategorie</NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="/admin/reviews">Komentarze</NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="/admin/users">Użytkownicy</NavLink>
                </div>
            </nav>
            <div class="d-lg-flex col-lg-3 justify-content-lg-end">
                <div class="dropdown text-end">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                        </svg>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small">
                        <li>
                            <a class="dropdown-item" href="/">Strona główna</a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="/account/manage">Moje konto</a>
                        </li>
                        <hr>
                        <li>
                            <form action="account/logout" method="post">
                                <AntiforgeryToken/>
                                <input type="hidden" name="ReturnUrl" value="@_currentUrl"/>
                                <button type="submit" class="dropdown-item">
                                    Wyloguj się
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>

<main class="container">
    @Body
</main>

<footer class="container">
    <div class="d-flex justify-content-center align-items-center py-3 my-4 border-top">
        <span class="text-body-secondary">Copyright &copy; 2024</span>
    </div>
</footer>

@code {
    private string? _currentUrl;

    protected override void OnInitialized()
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

}