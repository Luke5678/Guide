<div @onclick="Hide" class="@(_hidden ? "hidden" : "flex") items-center justify-center bg-gray-900/50 overflow-y-auto fixed w-full h-full max-h-full inset-0 z-50">
    <div @onclick:stopPropagation="true" class="p-4 w-full max-w-2xl max-h-full">
        <div class="bg-white rounded-lg shadow">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900 @(Center ? "grow text-center pl-8" : "")">
                    @TitleContent
                </h3>
                <button @onclick="Hide" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center p-0">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-4 md:p-5 space-y-4">
                @BodyContent
            </div>
            <!-- Modal footer -->
            <div class="flex items-center @(Center ? "justify-center" : "") p-4 md:p-5 border-t border-gray-200 rounded-b">
                @FooterContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool Center { get; set; }

    [Parameter] public RenderFragment? TitleContent { get; set; }

    [Parameter] public RenderFragment? BodyContent { get; set; }

    [Parameter] public RenderFragment? FooterContent { get; set; }

    private bool _hidden = true;

    public void Show()
    {
        _hidden = false;
    }

    public void Hide()
    {
        _hidden = true;
    }

}