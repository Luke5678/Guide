@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IStringLocalizer<SharedResource> Loc
@inject ICategoryService CategoryService

<HeadContent>
    <link rel="stylesheet" href="css/app.css"/>
</HeadContent>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="#">@Loc["Przewodnik Opolskie"]</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
                aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                @foreach (var category in _categories)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="/category/@category.Id">@category.Name</a>
                    </li>
                }
            </ul>
            <div class="ms-auto me-4">
                <LanguageSwitcher/>
            </div>
            <div class="dropdown text-end">
                <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                   data-bs-toggle="dropdown" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0"/>
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1"/>
                    </svg>
                </a>
                <ul class="dropdown-menu dropdown-menu-end text-small">
                    <AuthorizeView>
                        <Authorized>
                            <li>
                                <a class="dropdown-item" href="/account/manage">@Loc["Moje konto"]</a>
                            </li>
                            <hr>
                            <li>
                                <form action="account/logout" method="post">
                                    <AntiforgeryToken/>
                                    <input type="hidden" name="ReturnUrl" value="@_currentUrl"/>
                                    <button type="submit" class="dropdown-item">
                                        @Loc["Wyloguj się"]
                                    </button>
                                </form>
                            </li>
                        </Authorized>
                        <NotAuthorized>
                            <li>
                                <a class="dropdown-item" href="/account/login">@Loc["Logowanie"]</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/account/register">@Loc["Rejestracja"]</a>
                            </li>
                        </NotAuthorized>
                    </AuthorizeView>
                </ul>
            </div>
        </div>
    </div>
</nav>

<header class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1>@Loc["Multimedialny Przewodnik po Województwie Opolskim"]</h1>
        <p class="lead">@Loc["Odkryj najciekawsze miejsca i atrakcje w regionie!"]</p>
    </div>
</header>

<main class="container my-5 content">
    @Body
</main>

<AdminTools/>

<footer class="bg-light py-4">
    <div class="container text-center">
        <p class="mb-0">© 2024 @Loc["Multimedialny Przewodnik po Województwie Opolskim"]</p>
    </div>
</footer>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string? _currentUrl;
    private List<CategoryDto> _categories = [];

    protected override async Task OnInitializedAsync()
    {
        NavigationManager.LocationChanged += OnLocationChanged;
        _categories = await CategoryService.Get();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        _currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

}