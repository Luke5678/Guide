@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))

@inject IStringLocalizer<SharedResource> Loc

<div class="row align-items-center row-gap-3">
    @foreach (var image in Images)
    {
        <div class="col-sm-4 col-md-2" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#galleryModal" @onclick="() => OnImageSelected(image)">
            <img src="@image.Url" class="img-fluid img-thumbnail" alt="@image.Url">
        </div>
    }
</div>

<div class="modal fade" id="galleryModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                @if (_selectedImage != null)
                {
                    <div class="d-flex align-items-center justify-content-center h-100">
                        <img src="@_selectedImage.Url" class="img-fluid" alt="@_selectedImage.Url">
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    @Loc["Zamknij"]
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public List<AttractionImageDto> Images { get; set; } = [];
    private AttractionImageDto? _selectedImage;

    private void OnImageSelected(AttractionImageDto image)
    {
        _selectedImage = image;
    }

}