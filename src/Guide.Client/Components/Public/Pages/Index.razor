                        }
                        <div class="card-body">
                            <h5 class="card-title">@attraction.Name</h5>
                            <p class="card-text">Krótki opis atrakcji.</p>
                            <a href="/attraction/@attraction.Id" class="btn btn-primary">@Loc["Zobacz więcej"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

@code {

    // TODO
    private List<AttractionDto> _recommended = [];
    private List<AttractionDto> _popular = [];
    private List<AttractionDto> _commented = [];

    protected override async Task OnInitializedAsync()
    {
        var list = await AttractionService.Get(limit: 12);

        _recommended = list.Take(4).ToList();
        _popular = list.Skip(4).Take(4).ToList();
        _commented = list.Skip(8).Take(4).ToList();
    }

}