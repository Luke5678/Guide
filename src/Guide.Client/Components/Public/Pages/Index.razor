@page "/"
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<SharedResource> Loc
@inject IAttractionService AttractionService

<PageTitle>@Loc["Przewodnik Opolskie"]</PageTitle>

@if (_recommended.Count > 0)
{
    <section class="mb-5">
        <h2>@Loc["Polecane"]</h2>
        <div class="row">
            @foreach (var attraction in _recommended)
            {
                <div class="col-md-3 mb-4">
                    <div class="card">
                        @if (attraction.MainImage != null)
                        {
                            <img src="@attraction.MainImage.Url" class="card-img-top" alt="@attraction.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@attraction.Name</h5>
                            <p class="card-text">Krótki opis atrakcji.</p>
                            <a href="/attraction/@attraction.Id" class="btn btn-primary">@Loc["Zobacz więcej"]</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}

@if (_popular.Count > 0)
{
    <section class="mb-5">
        <h2>@Loc["Popularne"]</h2>
